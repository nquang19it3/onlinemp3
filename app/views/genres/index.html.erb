<div class="col-12">
<p id="notice"><%= notice %></p>

<h1>Genres</h1>

<table>
  <thead>
    <tr>
      <th>Genres</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td>
          <div class="order-owner">
            <%= image_tag(genre.image, :alt=>"")%>
            <span><%= genre.genres_name %></span>
          </div>
        </td>
        <td style="width: 50px">
          <%= link_to genre , class:"btn btn-outline-success" do %>
          <i class='bx bxs-show' ></i>
          <%end%>
        </td>
        <td style="width: 50px">
          <%= link_to edit_genre_path(genre), class:"btn btn-outline-info" do%>
          <i class='bx bxs-edit' ></i>
          <%end%>
        </td>
        <td style="width: 50px">
          <%= link_to genre, class:"btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class='bx bx-trash' ></i>
          <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Genre', new_genre_path %>
</div>