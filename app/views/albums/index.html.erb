<div class="col-12">
<p id="notice"><%= notice %></p>

<h1>Albums</h1>

<table>
  <thead>
    <tr>
      <th>Album</th>
      <th>Description</th>
      <th>Artist</th>
      <th>Songs</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td>
          <div class="order-owner">
            <%= image_tag(album.image, :alt=>"")%>
            <span><%= album.album_name %></span>
          </div>
        </td>
        <td class="text-truncate" style="max-width: 300px;"><%= album.album_description %></td>
        <td><%= album.artist.artist_stagename %></td>
        <td style="text-align:center;"><%= album.songs.count %></td>
                    <td>
                      <%= link_to album , class:"btn btn-outline-success" do %>
                      <i class='bx bxs-show' ></i>
                      <%end%>
                    </td>
                    <td >
                      <%= link_to edit_album_path(album), class:"btn btn-outline-info" do%>
                        <i class='bx bxs-edit' ></i>
                      <%end%>
                    </td>
                    <td>
                      <%= link_to album, class:"btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } do %>
                      <i class='bx bx-trash' ></i>
                      <%end%>
                    </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Album', new_album_path %>
</div>
