<header>
  <div class="container-m">
    <div class="heading">
      <div class="toggle">
        <label for="toggleBtn">
          <span></span><span></span><span></span>
        </label>
      </div>
      <div class="logo">
        <%= image_tag("logo.png", :alt=> "Music Player") %>
      </div>
      <div class="search">
        <div class="search-bar">
          <%= form_tag search_all_path , :method=> "get" do%>
            <%= text_field_tag :search, params[:search], :autocomplete=> "off", :placeholder => "search..."%>
            <%= submit_tag nil, hidden: true%>
          <% end %>
                  <div class="tags">
                    <div class="tag">
                      <p>Bài hát</p>
                    </div>
                    <div class="tag">
                      <p>Nghệ sĩ</p>
                    </div>
                    <div class="tag">
                      <p>Rap</p>
                    </div>
                  </div>
        </div>
      </div>
      <div class="taskbar">
        <div class="security">
          <button type="button" class="icon">
            <span><i class="fas fa-shield-alt"></i></span>
          </button>
          <button type="button" class="icon">
            <span><i class="fas fa-cog"></i></span>
          </button>
          <button type="button" class="icon">
            <span><i class="fas fa-bell"></i></span>
          </button>
        </div>
      </div>
      <div class="switch">
        <input type="checkbox" name="switchBtn" id="switchBtn" hidden />
        <label for="switchBtn"></label>
      </div>
      <div class="user-signin">
        <label for="toggle-user">
          Sign In
        </label>
      </div>
    </div>
  </div>
</header>