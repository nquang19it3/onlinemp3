
            <div class="col-12">
              <p id="notice"><%= notice %></p>
                <table class="">
            <thead>
              <tr>
                <th>Artist</th>
                <th>Real Name</th>
                <th>Description</th>
                <th>Birthday</th>
                <th colspan="3" style="width: 100px;">Actions</th>
              </tr>
            </thead>
              <tbody>
                <% @artists.each do |artist| %>
                  <tr>
                    <td>
                      <div class="order-owner">
                        <%= image_tag(artist.image, :alt=>"")%>
                        <span><%= artist.artist_stagename %></span>
                      </div>
                    </td>
                    <td><%= artist.artist_realname %></td>
                    <td class="text-truncate" style="max-width: 300px;"><%= artist.artist_description %></td>
                    <td class="text-success fw-bold" style="width: 150px;" >
                      <%= artist.artist_birthday%>
                    </td>

                    <td>
                      <%= link_to artist , class:"btn btn-outline-success" do %>
                      <i class='bx bxs-show' ></i>
                      <%end%>
                    </td>
                    <td >
                      <%= link_to edit_artist_path(artist), class:"btn btn-outline-info" do%>
                        <i class='bx bxs-edit' ></i>
                      <%end%>
                    </td>
                    <td>
                      <%= link_to artist, class:"btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } do %>
                      <i class='bx bx-trash' ></i>
                      <%end%>
                    </td>
                  </tr>
                <% end %>
              </tbody>
          </table>
          <br>
          <%= link_to new_artist_path, class: "btn btn-dark" do %>
            <span><i class='bx bx-upload'></i></span> Upload
          <% end %>
        </div>

